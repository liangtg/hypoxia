<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/anchor1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9DCB83"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/spacing_double"
            android:paddingRight="@dimen/spacing_double"
            android:paddingTop="@dimen/spacing_double">

            <TextView
                android:id="@+id/selected_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-05-10~2016-05-11"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="?android:textColorPrimaryInverse" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/total_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计4次"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="?android:textColorPrimaryInverse" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/spacing_normal"
            android:paddingLeft="@dimen/spacing_double"
            android:paddingRight="@dimen/spacing_double"
            android:paddingTop="@dimen/spacing_normal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/spacing_normal"
                android:drawableRight="@drawable/oxygen_bar"
                android:paddingRight="@dimen/spacing_normal"
                android:text="血氧饱和度"
                android:textColor="?android:textColorPrimaryInverse" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/spacing_normal"
                android:paddingRight="@dimen/spacing_normal"
                android:text="(%)"
                android:textColor="?android:textColorPrimaryInverse" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/spacing_normal"
                android:drawableRight="@drawable/heart"
                android:paddingRight="@dimen/spacing_normal"
                android:text="心率"
                android:textColor="?android:textColorPrimaryInverse" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分钟/次"
                android:textColor="?android:textColorPrimaryInverse" />
        </LinearLayout>

        <android.support.percent.PercentFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/spacing_normal">

            <com.github.mikephil.charting.charts.CombinedChart
                android:id="@+id/chart"
                app:layout_aspectRatio="200%"
                app:layout_widthPercent="100%" />
        </android.support.percent.PercentFrameLayout>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/date_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/anchor1"
        android:background="@android:color/white"
        android:checkedButton="@+id/day"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/spacing_normal">

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2" />

        <RadioButton
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_bg3"
            android:button="@null"
            android:gravity="center"
            android:minWidth="72dp"
            android:paddingBottom="@dimen/spacing_normal"
            android:paddingLeft="@dimen/spacing_double"
            android:paddingRight="@dimen/spacing_double"
            android:paddingTop="@dimen/spacing_normal"
            android:text="日"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/tab_text_inverse" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_bg3"
            android:button="@null"
            android:gravity="center"
            android:minWidth="72dp"
            android:paddingBottom="@dimen/spacing_normal"
            android:paddingLeft="@dimen/spacing_double"
            android:paddingRight="@dimen/spacing_double"
            android:paddingTop="@dimen/spacing_normal"
            android:text="周"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/tab_text_inverse" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_bg3"
            android:button="@null"
            android:gravity="center"
            android:minWidth="72dp"
            android:paddingBottom="@dimen/spacing_normal"
            android:paddingLeft="@dimen/spacing_double"
            android:paddingRight="@dimen/spacing_double"
            android:paddingTop="@dimen/spacing_normal"
            android:text="月"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/tab_text_inverse" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2" />
    </RadioGroup>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/all_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/date_group" />

    <ProgressBar
        android:id="@+id/progress"
        style="?android:progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
</RelativeLayout>
